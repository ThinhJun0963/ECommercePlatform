@page
@model EShop.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3 class="text-center">Đăng Nhập</h3>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label>Tài khoản</label>
                    <input asp-for="LoginInput.Username" class="form-control" />
                    <span asp-validation-for="LoginInput.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Mật khẩu</label>
                    <input asp-for="LoginInput.Password" type="password" class="form-control" />
                    <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>
            </form>
            <div class="mt-3 text-center">
                <a asp-page="/Register">Chưa có tài khoản? Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>