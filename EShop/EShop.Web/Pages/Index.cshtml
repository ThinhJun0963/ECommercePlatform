@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    /* CSS trang trí riêng cho trang chủ */
    .hero-section {
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        color: white;
        padding: 3rem 0;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .product-card {
        transition: all 0.3s ease;
        border: 1px solid #eee;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
            border-color: #0d6efd;
        }

    .card-img-wrapper {
        position: relative;
        overflow: hidden;
        height: 220px;
    }

    .card-img-top {
        transition: transform 0.5s ease;
        object-fit: cover;
        height: 100%;
        width: 100%;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .badge-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 3em;
    }
</style>

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Chào mừng đến với EShop</h1>
        <p class="lead mb-0">Nền tảng mua sắm trực tuyến kết nối mọi nhu cầu của bạn.</p>
    </div>
</div>

<div class="container">
    <div class="mb-4">
        <h2 class="fw-bold text-dark border-start border-5 border-primary ps-3">Sản phẩm nổi bật</h2>
    </div>

    @if (Model.Products.Count == 0)
    {
        <div class="text-center py-5">
            <h4 class="text-muted">Chưa có sản phẩm nào.</h4>
            <p>Hãy quay lại sau nhé!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 product-card shadow-sm">
                        <div class="card-img-wrapper bg-light d-flex align-items-center justify-content-center">
                            <span class="badge bg-danger badge-overlay shadow-sm">Hot</span>

                            <a asp-page="/ProductDetail" asp-route-id="@item.Id" class="w-100 h-100">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/300x220?text=EShop" class="card-img-top" alt="No Image">
                                }
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">
                                <a asp-page="/ProductDetail" asp-route-id="@item.Id" class="text-decoration-none text-dark fw-bold stretched-link-custom">
                                    @item.Name
                                </a>
                            </h5>

                            <h5 class="text-primary fw-bold mb-2">@item.Price.ToString("N0") ₫</h5>

                            <p class="card-text text-muted small text-truncate-2 flex-grow-1">
                                @(item.Description ?? "Sản phẩm chất lượng cao từ EShop.")
                            </p>

                            <div class="d-flex align-items-center mb-3 pt-3 border-top">
                                <i class="bi bi-shop text-muted me-2"></i>
                                <small class="text-muted text-truncate" style="max-width: 150px;">
                                    @(item.Seller?.FullName ?? "Shop Uy Tín")
                                </small>
                            </div>

                            <form method="post" asp-page-handler="AddToCart" asp-route-id="@item.Id" class="mt-auto">
                                @if (item.StockQuantity > 0)
                                {
                                    <button type="submit" class="btn btn-outline-primary w-100 fw-bold">
                                        <i class="bi bi-cart-plus-fill"></i> Thêm vào giỏ
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-secondary w-100" disabled>
                                        <i class="bi bi-x-circle"></i> Hết hàng
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>