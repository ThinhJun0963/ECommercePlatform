@page "{id:int}"
@model EShop.Web.Pages.ProductDetailModel
@{
    ViewData["Title"] = Model.Product?.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
            {
                <img src="@Model.Product.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Product.Name">
            }
            else
            {
                <img src="https://via.placeholder.com/600x400" class="img-fluid rounded" alt="No Image">
            }
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Product.Name</h2>
            <h3 class="text-danger my-3">@Model.Product.Price.ToString("N0") VNĐ</h3>
            <p class="text-muted">@Model.Product.Description</p>
            <p>Kho: <strong>@Model.Product.StockQuantity</strong> | Người bán: <strong>@Model.Product.Seller?.FullName</strong></p>

            <form method="post" asp-page="/Index" asp-page-handler="AddToCart" asp-route-id="@Model.Product.Id">
                <button type="submit" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>

    <hr class="my-5">

    <div class="row">
        <div class="col-md-8">
            <h3 class="mb-4">Đánh giá từ khách hàng</h3>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="card mb-4 bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Viết đánh giá của bạn</h5>
                        <form method="post" asp-page-handler="AddReview">
                            <div class="mb-3">
                                <label class="form-label">Đánh giá sao:</label>
                                <select asp-for="RatingInput" class="form-select w-auto">
                                    <option value="5">⭐⭐⭐⭐⭐ (Tuyệt vời)</option>
                                    <option value="4">⭐⭐⭐⭐ (Tốt)</option>
                                    <option value="3">⭐⭐⭐ (Bình thường)</option>
                                    <option value="2">⭐⭐ (Tệ)</option>
                                    <option value="1">⭐ (Rất tệ)</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nội dung:</label>
                                <textarea asp-for="CommentInput" class="form-control" rows="3" required placeholder="Chia sẻ cảm nhận của bạn..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Gửi đánh giá</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Vui lòng <a asp-page="/Login">đăng nhập</a> để viết đánh giá.
                </div>
            }

            @if (Model.Reviews.Count > 0)
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6 class="fw-bold"><i class="bi bi-person-circle"></i> @review.Customer.FullName</h6>
                                <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <div class="text-warning mb-2">
                                @for (int i = 0; i < review.Rating; i++)
                                {
                                    <span>★</span>
                                }
                                @for (int i = review.Rating; i < 5; i++)
                                {
                                    <span class="text-muted">★</span>
                                }
                            </div>
                            <p class="card-text">@review.Comment</p>
                            @if (!string.IsNullOrEmpty(review.SellerReply))
                            {
                                <div class="mt-3 ms-4 p-3 bg-light rounded border-start border-3 border-success">
                                    <small class="fw-bold text-success mb-1 d-block">
                                        <i class="bi bi-arrow-return-right"></i> Phản hồi từ Người bán:
                                    </small>
                                    <span>@review.SellerReply</span>
                                </div>
                            }

                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Chưa có đánh giá nào. Hãy là người đầu tiên!</p>
            }
        </div>
    </div>
</div>