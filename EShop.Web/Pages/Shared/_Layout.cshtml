@using System.Security.Claims
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShop</title>

    <!-- Bootstrap 5 CSS (Mới nhất) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Google Fonts (Thêm font Inter cho hiện đại) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-3px);
            }

        .seller-badge {
            background-color: #e8f5e9;
            color: #198754;
            border: 1px solid #198754;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- Navbar: Sticky Top + Shadow -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-3">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand text-primary fs-3" asp-area="" asp-page="/Index">
                    <i class="bi bi-bag-check-fill"></i> EShop
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Menu Bên Trái -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-page="/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Cart">
                                <i class="bi bi-cart3"></i> Giỏ hàng
                            </a>
                        </li>
                    </ul>

                    <!-- Menu Bên Phải -->
                    <ul class="navbar-nav ms-auto align-items-center">

                        <!-- KHU VỰC DÀNH RIÊNG CHO SELLER -->
                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item me-3 d-none d-lg-block">
                                <span class="seller-badge"><i class="bi bi-shop"></i> Kênh Người Bán</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-success fw-bold me-2" asp-page="/Seller/CreateProduct">
                                    <i class="bi bi-plus-lg"></i> Đăng bán
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-success fw-bold me-2" asp-page="/Seller/ManageProducts">
                                    <i class="bi bi-box-seam"></i> Kho hàng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold me-3" href="/Seller/ManageOrders">
                                    <i class="bi bi-clipboard-check"></i> Quản lý đơn
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-page="/Seller/ManageReviews">
                                    <i class="bi bi-star-half"></i> Đánh giá
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-page="/Admin/Dashboard">
                                    <i class="bi bi-speedometer2"></i> Admin Panel
                                </a>
                            </li>
                        }
                        <!-- KHU VỰC TÀI KHOẢN (DROPDOWN) -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 35px; height: 35px;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <strong>@User.FindFirst("FullName")?.Value</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                                    <li><span class="dropdown-header">Tài khoản</span></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Hồ sơ cá nhân</a></li>
                                    <li>
                                        <a class="dropdown-item" href="/Customer/MyOrders">
                                            <i class="bi bi-bag"></i> Đơn mua của tôi
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Logout">
                                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-page="/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-page="/Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container my-4 flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-4 pb-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase fw-bold text-primary">EShop</h5>
                    <p class="small text-muted">Nền tảng thương mại điện tử kết nối người mua và người bán hàng đầu.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase fw-bold">Liên kết</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Về chúng tôi</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase fw-bold">Liên hệ</h5>
                    <p class="small text-white-50"><i class="bi bi-geo-alt"></i> Hồ Chí Minh, Việt Nam</p>
                    <p class="small text-white-50"><i class="bi bi-envelope"></i> support@eshop.com</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center small text-white-50">
                &copy; 2025 - EShop Platform. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>