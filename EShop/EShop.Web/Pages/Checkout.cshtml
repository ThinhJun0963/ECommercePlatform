@page
@using EShop.DAL.Enums
@model EShop.Web.Pages.CheckoutModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <h2>Xác nhận đơn hàng</h2>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Total.ToString("N0") VNĐ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Thông tin thanh toán
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center text-danger">
                        Tổng: @Model.GrandTotal.ToString("N0") VNĐ
                    </h4>
                    <hr />

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Phương thức thanh toán:</label>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethod" value="@PaymentMethod.COD" checked>
                                <label class="form-check-label">Thanh toán khi nhận hàng (COD)</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethod" value="@PaymentMethod.VNPay">
                                <label class="form-check-label">Ví điện tử VNPay (Demo)</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethod" value="@PaymentMethod.Momo">
                                <label class="form-check-label">Ví Momo (Demo)</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2">
                            <i class="bi bi-check-circle"></i> ĐẶT HÀNG NGAY
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>