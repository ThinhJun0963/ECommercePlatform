@page
@using EShop.DAL.Enums
@model EShop.Web.Pages.Customer.MyOrdersModel
@{
    ViewData["Title"] = "Đơn mua của tôi";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="bi bi-bag-check"></i> Lịch sử mua hàng</h2>

    @if (Model.MyOrders.Count == 0)
    {
        <div class="text-center py-5 bg-light rounded">
            <i class="bi bi-cart-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Bạn chưa có đơn hàng nào.</h4>
            <a asp-page="/Index" class="btn btn-primary mt-2">Đi mua sắm ngay</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.MyOrders)
            {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                            <div>
                                <strong>Mã đơn: #@order.Id</strong>
                                <span class="text-muted mx-2">|</span>
                                <small class="text-muted">Ngày đặt: @order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>

                            <div>
                                @switch (order.Status)
                                {
                                    case OrderStatus.Pending:
                                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                        break;
                                    case OrderStatus.Processing:
                                        <span class="badge bg-primary">Đang chuẩn bị</span>
                                        break;
                                    case OrderStatus.Shipped:
                                        <span class="badge bg-info text-dark">Đang giao hàng</span>
                                        break;
                                    case OrderStatus.Completed:
                                        <span class="badge bg-success">Giao thành công</span>
                                        break;
                                    case OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </div>
                        </div>

                        <div class="card-body">
                            @foreach (var item in order.OrderDetails)
                            {
                                <div class="d-flex align-items-center mb-3">
                                    <img src="@(item.Product?.ImageUrl ?? "https://via.placeholder.com/60")"
                                         style="width: 60px; height: 60px; object-fit: cover;" class="rounded border me-3">

                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 text-primary">
                                            <a asp-page="/ProductDetail" asp-route-id="@item.ProductId" class="text-decoration-none">
                                                @item.Product?.Name
                                            </a>
                                        </h6>
                                        <small class="text-muted">Số lượng: x @item.Quantity</small>
                                    </div>

                                    <div class="text-end fw-bold">
                                        @item.UnitPrice.ToString("N0") ₫
                                    </div>
                                </div>
                            }

                            <hr />

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    Phương thức: <strong>@order.PaymentMethod</strong>
                                </div>
                                <h5 class="text-danger mb-0">Tổng tiền: @order.TotalAmount.ToString("N0") ₫</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>