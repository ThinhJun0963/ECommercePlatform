@page
@using EShop.DAL.Enums
@model EShop.Web.Pages.Seller.ManageOrdersModel
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-clipboard-data"></i> Quản lý Đơn hàng</h2>

    @if (Model.SellerOrderDetails.Count == 0)
    {
        <div class="alert alert-info">Chưa có đơn hàng nào cần xử lý.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover border">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Sản phẩm</th>
                        <th>Khách hàng</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền (Món)</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SellerOrderDetails)
                    {
                        <tr>
                            <td>#@item.OrderId</td>
                            <td>@item.Order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                    {
                                        <img src="@item.Product.ImageUrl" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" class="rounded" />
                                    }
                                    <span class="fw-bold">@item.Product.Name</span>
                                </div>
                            </td>
                            <td>@item.Order.Customer.FullName</td>
                            <td>@item.Quantity</td>
                            <td>@((item.UnitPrice * item.Quantity).ToString("N0")) đ</td>

                            <td>
                                @if (item.Order.Status == OrderStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                }
                                else if (item.Order.Status == OrderStatus.Processing)
                                {
                                    <span class="badge bg-primary">Đang chuẩn bị</span>
                                }
                                else if (item.Order.Status == OrderStatus.Shipped)
                                {
                                    <span class="badge bg-info text-dark">Đang giao</span>
                                }
                                else if (item.Order.Status == OrderStatus.Completed)
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Order.Status</span>
                                }
                            </td>

                            <td>
                                <form method="post" asp-page-handler="UpdateStatus" class="d-flex gap-2">
                                    <input type="hidden" name="orderId" value="@item.OrderId" />

                                    @if (item.Order.Status == OrderStatus.Pending)
                                    {
                                        <button type="submit" name="statusId" value="@((int)OrderStatus.Processing)" class="btn btn-sm btn-primary">
                                            <i class="bi bi-check-lg"></i> Xác nhận
                                        </button>
                                    }

                                    @if (item.Order.Status == OrderStatus.Processing)
                                    {
                                        <button type="submit" name="statusId" value="@((int)OrderStatus.Shipped)" class="btn btn-sm btn-info">
                                            <i class="bi bi-truck"></i> Giao hàng
                                        </button>
                                    }

                                    @if (item.Order.Status == OrderStatus.Shipped)
                                    {
                                        <button type="submit" name="statusId" value="@((int)OrderStatus.Completed)" class="btn btn-sm btn-success">
                                            <i class="bi bi-star"></i> Hoàn tất
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>