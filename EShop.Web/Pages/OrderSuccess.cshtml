@page "{id:int}"
@model EShop.Web.Pages.OrderSuccessModel
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center mt-5">
    <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
    <h1 class="mt-3">Đặt hàng thành công!</h1>
    <p class="lead">Mã đơn hàng của bạn là: <strong>#@Model.OrderId</strong></p>
    <p>Cảm ơn bạn đã mua sắm tại EShop.</p>

    <a asp-page="/Index" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
</div>