@page
@model EShop.Web.Pages.Seller.ManageProductsModel
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-box-seam"></i> Kho hàng của tôi</h2>
        <a asp-page="/Seller/CreateProduct" class="btn btn-success"><i class="bi bi-plus-lg"></i> Thêm mới</a>
    </div>

    @if (Model.MyProducts.Count == 0)
    {
        <div class="alert alert-warning">Bạn chưa đăng sản phẩm nào.</div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá bán</th>
                    <th>Tồn kho</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MyProducts)
                {
                    <tr>
                        <td>
                            <img src="@(item.ImageUrl ?? "https://via.placeholder.com/50")" style="width: 50px; height: 50px; object-fit: cover;" class="rounded border" />
                        </td>
                        <td class="fw-bold">@item.Name</td>
                        <td>@item.Price.ToString("N0") VNĐ</td>
                        <td>
                            @if (item.StockQuantity > 0)
                            {
                                <span class="badge bg-success">@item.StockQuantity</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Hết hàng</span>
                            }
                        </td>
                        <td>
                            <a asp-page="/Seller/EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>

                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Bạn chắc chắn muốn xóa sản phẩm này? Hành động không thể hoàn tác!');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>